<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Airplan - Dashboard</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700&family=Outfit:wght@300;400;600;800&display=swap" rel="stylesheet">
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['"Noto Sans KR"', 'sans-serif'],
                        display: ['"Outfit"', 'sans-serif'],
                    },
                    colors: {
                        base: { 950: '#050505' }
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="/css/slideshow.css">
</head>
<body class="bg-base-950 text-white font-sans antialiased selection:bg-blue-500/30 selection:text-blue-200 min-h-screen relative overflow-x-hidden">

    <!-- Background Slideshow -->
    <div id="slide1" class="bg-slide active" style="background-image: url('https://images.unsplash.com/photo-1436491865332-7a61a109cc05?q=80&w=2074&auto=format&fit=crop');"></div>
    <div id="slide2" class="bg-slide" style="background-image: url('https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?q=80&w=2021&auto=format&fit=crop');"></div>
    <div id="slide3" class="bg-slide" style="background-image: url('https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?q=80&w=2070&auto=format&fit=crop');"></div>
    <div class="bg-overlay"></div>
    <!-- Additional Dark Overlay for Contrast -->
    <div class="fixed inset-0 bg-black/40 backdrop-blur-[1px] -z-10"></div>

    <!-- Global Navigation -->
    <%- include('../include/nav_bar.ejs') %>

    <div class="container mx-auto px-6 pt-32 pb-20 max-w-7xl">
        
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
            
            <!-- Left Panel: Active Journeys -->
            <section class="lg:col-span-5 flex flex-col gap-8">
                <div class="flex items-center justify-between">
                    <h2 class="font-display text-3xl font-bold tracking-tight text-white drop-shadow-md">Active Journeys</h2>
                    <button onclick="location.href='/region'" class="w-10 h-10 rounded-full bg-white/10 border border-white/20 flex items-center justify-center hover:bg-blue-500/20 hover:border-blue-400/50 hover:text-blue-300 transition-all group backdrop-blur-md" title="New Plan">
                        <i data-lucide="plus" class="w-5 h-5 group-hover:rotate-90 transition-transform duration-300"></i>
                    </button>
                </div>

                <div class="flex flex-col gap-4">
                    <!-- Active Trip Card -->
                    <div class="group relative overflow-hidden rounded-3xl bg-black/30 border border-white/10 hover:bg-black/40 hover:border-white/30 transition-all duration-300 cursor-pointer backdrop-blur-md shadow-lg" onclick="loadSession('session_01')">
                        <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                        <div class="p-6 relative z-10 flex justify-between items-start">
                            <div>
                                <h3 class="text-2xl font-bold text-white mb-1 group-hover:text-blue-200 transition-colors drop-shadow-sm">Tokyo, Japan</h3>
                                <p class="text-sm text-white/70 font-light flex items-center gap-2">
                                    <i data-lucide="clock" class="w-3 h-3"></i> Modified: 2 mins ago
                                </p>
                            </div>
                            <span class="px-3 py-1 rounded-full bg-emerald-500/20 border border-emerald-500/30 text-emerald-300 text-xs font-bold tracking-wider uppercase backdrop-blur-md shadow-sm">Draft</span>
                        </div>
                    </div>

                    <!-- Another Trip Card -->
                    <div class="group relative overflow-hidden rounded-3xl bg-black/30 border border-white/10 hover:bg-black/40 hover:border-white/30 transition-all duration-300 cursor-pointer backdrop-blur-md shadow-lg" onclick="loadSession('session_02')">
                        <div class="p-6 relative z-10 flex justify-between items-start">
                            <div>
                                <h3 class="text-2xl font-bold text-white mb-1 group-hover:text-blue-200 transition-colors drop-shadow-sm">Paris, France</h3>
                                <p class="text-sm text-white/70 font-light flex items-center gap-2">
                                    <i data-lucide="calendar" class="w-3 h-3"></i> 2024-11-18
                                </p>
                            </div>
                            <span class="px-3 py-1 rounded-full bg-blue-500/20 border border-blue-500/30 text-blue-300 text-xs font-bold tracking-wider uppercase backdrop-blur-md shadow-sm">Planning</span>
                        </div>
                    </div>
                </div>

                <!-- Import Section -->
                <div class="mt-8">
                    <h3 class="font-display text-xl font-semibold text-white/90 mb-4 drop-shadow-sm">Load Session</h3>
                    <div class="relative group" onclick="document.getElementById('jsonFile').click()">
                        <div class="w-full h-32 rounded-3xl border-2 border-dashed border-white/20 bg-black/20 hover:bg-black/30 hover:border-white/40 transition-all flex flex-col items-center justify-center cursor-pointer gap-3 backdrop-blur-sm">
                            <i data-lucide="folder-open" class="w-8 h-8 text-white/50 group-hover:text-blue-300 transition-colors"></i>
                            <div class="text-center">
                                <p class="text-white/80 font-medium group-hover:text-white transition-colors">Import JSON File</p>
                                <p class="text-xs text-white/50 mt-1">Click or Drag & Drop</p>
                            </div>
                        </div>
                        <input type="file" id="jsonFile" accept=".json" onchange="handleFileUpload(this)" class="hidden">
                    </div>
                </div>
            </section>

            <!-- Right Panel: Travel History -->
            <section class="lg:col-span-7 flex flex-col gap-8">
                <div class="flex items-center justify-between border-b border-white/90 pb-6">
                    <h2 class="font-display text-5xl md:text-6xl font-thin text-white/90 tracking-tight drop-shadow-sm">Travel History</h2>                
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- History Card 1 -->
                    <div class="group relative overflow-hidden rounded-[2rem] bg-black/30 border border-white/10 hover:bg-black/40 transition-all duration-300 shadow-lg">
                        <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1538485399081-7191377e8241?q=80&w=1000&auto=format&fit=crop')] bg-cover bg-center opacity-40 group-hover:opacity-50 group-hover:scale-105 transition-all duration-700"></div>
                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent"></div>
                        
                        <div class="relative z-10 p-8 h-64 flex flex-col justify-end">
                            <div class="flex justify-between items-end">
                                <div>
                                    <h3 class="text-3xl font-bold text-white mb-2 drop-shadow-md">Seoul, Korea</h3>
                                    <p class="text-sm text-white/80 font-light">2023. 12. 25 - 12. 30</p>
                                </div>
                                <span class="px-3 py-1 rounded-full bg-white/10 border border-white/20 text-white/90 text-xs font-bold tracking-wider uppercase backdrop-blur-md shadow-sm">Done</span>
                            </div>
                        </div>
                    </div>

                    <!-- History Card 2 -->
                    <div class="group relative overflow-hidden rounded-[2rem] bg-black/30 border border-white/10 hover:bg-black/40 transition-all duration-300 shadow-lg">
                        <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1496442226666-8d4d0e62e6e9?q=80&w=1000&auto=format&fit=crop')] bg-cover bg-center opacity-40 group-hover:opacity-50 group-hover:scale-105 transition-all duration-700"></div>
                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent"></div>
                        
                        <div class="relative z-10 p-8 h-64 flex flex-col justify-end">
                            <div class="flex justify-between items-end">
                                <div>
                                    <h3 class="text-3xl font-bold text-white mb-2 drop-shadow-md">New York, USA</h3>
                                    <p class="text-sm text-white/80 font-light">2023. 09. 10 - 09. 20</p>
                                </div>
                                <span class="px-3 py-1 rounded-full bg-white/10 border border-white/20 text-white/90 text-xs font-bold tracking-wider uppercase backdrop-blur-md shadow-sm">Done</span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <script src="/javascripts/dashboard/script.js"></script>
    <script src="/javascripts/slideshow.js"></script>
    <script>
        lucide.createIcons();
    </script>
</body>
</html>
