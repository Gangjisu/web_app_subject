<!DOCTYPE html>
<html lang="ko">
<head>
    <!-- project common header -->
    <%- include('include/pHeader.ejs') %>

    <script type="importmap">
        {
            "imports": {
                "three": "https://unpkg.com/three@0.160.0/build/three.module.js",
                "three/addons/": "https://unpkg.com/three@0.160.0/examples/jsm/"
            }
        }
    </script>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700&family=Outfit:wght@300;400;600;800&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['"Noto Sans KR"', 'sans-serif'],
                        display: ['"Outfit"', 'sans-serif'],
                    },
                    colors: {
                        base: { 950: '#050505' }
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body class="h-screen w-screen relative text-white selection:bg-blue-300 selection:text-blue-900">

    <!-- Background Slideshow -->
    <div id="slide1" class="bg-slide active" style="background-image: url('https://images.unsplash.com/photo-1436491865332-7a61a109cc05?q=80&w=2074&auto=format&fit=crop');"></div>
    <div id="slide2" class="bg-slide" style="background-image: url('https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?q=80&w=2021&auto=format&fit=crop');"></div>
    <div id="slide3" class="bg-slide" style="background-image: url('https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?q=80&w=2070&auto=format&fit=crop');"></div>
    <div class="bg-overlay"></div>

    <!-- Collapsed Top Navigation Bar (Hidden by default) -->
    <%- include('include/nav_bar.ejs') %>

    <!-- Main Content Container -->
    <main id="main-container" class="relative w-full h-full flex items-center justify-center p-6">

        <!-- Glass Card -->
        <div class="glass-panel w-full max-w-4xl p-12 rounded-[2.5rem] relative overflow-hidden flex flex-col items-center text-center shadow-[0_0_50px_rgba(0,0,0,0.5)] border border-white/10 backdrop-blur-2xl bg-black/20">
            <!-- 3D Globe Container -->
            <div id="globe-container" class="opacity-80"></div>

            <!-- Title & Description -->
            <h1 class="font-display text-6xl md:text-8xl font-black tracking-tight mb-6 drop-shadow-2xl bg-gradient-to-b from-white to-white/60 bg-clip-text text-transparent">
                Air Plan
            </h1>
            <div class="w-24 h-1 bg-gradient-to-r from-transparent via-blue-400 to-transparent mb-8 opacity-50"></div>
            <p class="text-lg md:text-xl text-blue-100/80 mb-12 max-w-lg leading-relaxed font-light tracking-wide">
                구름 위를 걷는 듯한 설렘,<br/>
                당신의 다음 여정을 가장 완벽하게 설계해 드립니다.
            </p>

            <!-- Action Buttons -->
            <div class="flex flex-col md:flex-row gap-6 w-full md:w-auto z-10">
                <button onclick="window.location.href='/dashboard'" class="px-8 py-4 rounded-full bg-white/5 border border-white/10 text-lg font-medium text-white/90 hover:bg-white/10 hover:text-white hover:border-white/30 transition-all backdrop-blur-md flex items-center justify-center gap-3 group min-w-[200px]">
                    <i data-lucide="layout-dashboard" class="group-hover:text-blue-300 transition-colors"></i>
                    <span>Dashboard</span>
                </button>
                
                <button onclick="window.location.href='/region'" class="px-8 py-4 rounded-full bg-blue-500/20 border border-blue-400/30 text-lg font-medium text-blue-50 hover:bg-blue-500/30 hover:border-blue-400/50 transition-all backdrop-blur-md flex items-center justify-center gap-3 group min-w-[200px] shadow-[0_0_20px_rgba(59,130,246,0.2)] hover:shadow-[0_0_30px_rgba(59,130,246,0.4)]">
                    <i data-lucide="plus" class="group-hover:rotate-90 transition-transform duration-300"></i>
                    <span>New Plan</span>
                </button>
            </div>
        </div>

        <!-- Bottom Text -->
        <div class="absolute bottom-8 text-white/50 text-sm font-light tracking-widest uppercase">
            Designed for Travelers
        </div>
    </main>

    <!-- 3D Globe Logic (Module) -->
    <script type="module" src="/javascripts/index/globe.js"></script>

    <!-- UI Control Script -->
    <script src="/javascripts/index/ui.js"></script>

</body>
</html>
