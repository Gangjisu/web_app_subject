<!DOCTYPE html>
<html lang="ko">
<head>
    <!-- project common header -->
    <%- include('include/pHeader.ejs') %>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700&family=Outfit:wght@300;400;600;800&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['"Noto Sans KR"', 'sans-serif'],
                        display: ['"Outfit"', 'sans-serif'],
                    },
                    colors: {
                        base: { 950: '#050505' }
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/slideshow.css">
</head>
<body class="h-screen w-screen relative text-white selection:bg-blue-300 selection:text-blue-900 overflow-hidden">

    <!-- Background Slideshow -->
    <div id="slide1" class="bg-slide active" style="background-image: url('https://images.unsplash.com/photo-1436491865332-7a61a109cc05?q=80&w=2074&auto=format&fit=crop');"></div>
    <div id="slide2" class="bg-slide" style="background-image: url('https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?q=80&w=2021&auto=format&fit=crop');"></div>
    <div id="slide3" class="bg-slide" style="background-image: url('https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?q=80&w=2070&auto=format&fit=crop');"></div>
    <div class="bg-overlay"></div>

    <!-- Collapsed Top Navigation Bar -->
    <%- include('include/nav_bar.ejs') %>

    <!-- Main Content Container -->
    <main id="main-container" class="relative w-full h-full flex items-center justify-center p-6">

        <!-- Glass Card -->
        <div class="glass-panel w-full max-w-3xl p-16 rounded-[3rem] relative overflow-hidden flex flex-col items-center text-center shadow-[0_0_60px_rgba(0,0,0,0.3)] border border-white/10 backdrop-blur-xl bg-black/10">
            
            <!-- Decorative Elements -->
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-3/4 h-1 bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
            
            <!-- Title & Description -->
            <h1 class="font-display text-7xl md:text-9xl font-black tracking-tighter mb-8 drop-shadow-2xl text-white">
                Air Plan
            </h1>
            
            <p class="text-lg md:text-2xl text-blue-100/90 mb-16 max-w-xl leading-relaxed font-light tracking-wide">
                <span class="block mb-2 font-medium text-white/80">Make complex travel plans quickly and easily</span>
            </p>

            <!-- Action Buttons -->
            <div class="flex flex-col md:flex-row gap-6 w-full md:w-auto z-10">
                <button onclick="window.location.href='/dashboard'" class="px-10 py-5 rounded-2xl bg-white/5 border border-white/10 text-xl font-medium text-white/90 hover:bg-white/10 hover:text-white hover:border-white/30 transition-all backdrop-blur-md flex items-center justify-center gap-3 group min-w-[220px]">
                    <i data-lucide="layout-dashboard" class="w-6 h-6 group-hover:text-blue-300 transition-colors"></i>
                    <span>Dashboard</span>
                </button>
                
                <button onclick="window.location.href='/region'" class="px-10 py-5 rounded-2xl bg-blue-500/20 border border-blue-400/30 text-xl font-medium text-blue-50 hover:bg-blue-500/30 hover:border-blue-400/50 transition-all backdrop-blur-md flex items-center justify-center gap-3 group min-w-[220px] shadow-[0_0_20px_rgba(59,130,246,0.2)] hover:shadow-[0_0_30px_rgba(59,130,246,0.4)]">
                    <i data-lucide="plus" class="w-6 h-6 group-hover:rotate-90 transition-transform duration-300"></i>
                    <span>New Plan</span>
                </button>
            </div>
        </div>

        <!-- Bottom Text -->
        <div class="absolute bottom-10 text-white/30 text-xs font-light tracking-[0.3em] uppercase">
            Designed for Travelers
        </div>
    </main>

    <!-- UI Control Script -->
    <script src="/javascripts/index/ui.js"></script>
    <script src="/javascripts/slideshow.js"></script>

</body>
</html>
