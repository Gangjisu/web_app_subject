<script>
    // Scroll Effect
    window.addEventListener('scroll', () => {
        const nav = document.getElementById('nav-bar');
        if (window.scrollY > 50) {
            nav.classList.remove('bg-gradient-to-b', 'from-black/80', 'to-transparent');
            nav.classList.add('bg-black/50', 'backdrop-blur-xl', 'border-b', 'border-white/5');
        } else {
            nav.classList.add('bg-gradient-to-b', 'from-black/80', 'to-transparent');
            nav.classList.remove('bg-black/50', 'backdrop-blur-xl', 'border-b', 'border-white/5');
        }
    });
</script>